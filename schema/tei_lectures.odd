      <div>
        <head>TEI Specifications</head>
        <schemaSpec ident="tei_lectures" start="TEI" prefix="tei_" targetLang="en" docLang="en">
          <!-- required minimal header elements -->
          <moduleRef key="header"
            include="teiHeader fileDesc titleStmt publicationStmt sourceDesc taxonomy category classDecl encodingDesc catDesc idno profileDesc availability licence"/>
          <!-- required core elements (p and title for use in titleStmt) -->
          <moduleRef key="core"
            include="p title ptr name desc note term list item bibl editor respStmt resp publisher pubPlace date"/>
          <!-- required textstructure elements (TEI, text, and body) -->
          <moduleRef key="textstructure" include="TEI text body"/>
          <!-- required module tei instantiates lots of classes used for further expansion of this odd -->
          <moduleRef key="tei"/>
          <moduleRef key="namesdates"
            include="event eventName listEvent listPerson person roleName affiliation org listOrg place listPlace placeName forename surname country nameLink gender bloc"/>
          <moduleRef key="corpus" include="particDesc settingDesc"/>
          <classRef key="att.global.linking"/>
        </schemaSpec>
      </div>
